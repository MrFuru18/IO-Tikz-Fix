<Window x:Class="Tikz_Fix.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Tikz_Fix"
        xmlns:vm="clr-namespace:Tikz_Fix.ViewModel"
        mc:Ignorable="d"
        Title="Tikz Fix" Height="450" Width="800">
    <Window.DataContext>
        <vm:MainViewModel x:Name="vm"/>
    </Window.DataContext>
    <Grid>
        <Canvas x:Name="Surface" Background="White" MouseLeftButtonDown="Surface_MouseLeftButtonDown"></Canvas>
        <TextBlock x:Name="TikzCode" VerticalAlignment="Bottom" HorizontalAlignment="Right"/>
    </Grid>
</Window>
